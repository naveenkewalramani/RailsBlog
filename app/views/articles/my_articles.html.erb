<div>
  <table class="table table-striped table-bordered table-hover">
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Content</th>
      <th scope="col">Author</th>
      <th scope="col">Tags</th>
      <th scope="col">View</th>
      <% if session[:authenticate]== true %>
          <th scope="col">Edit</th>
        <% end %>
    </tr>
    <% @article.each do |article| %>
      <tr>
        <td class="col-lg-2"><%= article.title %></td>
        <td class="col-lg-6"><%= article.content %></td>
        <td class="col-lg-1"><%= article.author %></td>
        <td class="col-lg-1"><%= article.tags %></td>
        <td class="col-lg-1"><%= link_to 'Show', article_path(article) %></td>
        <% if session[:authenticate]== true %>
          <td class="col-lg-1"><%= link_to 'Edit', edit_article_path(article) %></td>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>