<style>
  li{
    color:white;
    text-transform: capitalize;
    font-family:Georgia; 
  }
</style>
<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand">RailsBlog</a>
    </div>
    <ul class="nav navbar-nav">
      <!-- <li class="active"><a href="#"></a></li> -->
      <li><a href="#"></a></li>
      <li><a href="#"></a></li>
      <li><a href="#"></a></li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <li><%=link_to 'View All' , articles_path %></li>
      <% if session[:authenticate]==false %>
        <li><%= link_to 'Signin/SignUp', users_new_path  %></li>
      <% else %>
        <li><a>Hi <%=  session[:username] %></a></li>
        <li><%=link_to 'Logout', users_logout_path %></li>
        <li><%=link_to 'My Articles' ,my_articles_path %></li>
      <% end %>
    </ul>
  </div>
</nav>

<button><%=link_to 'Create', new_article_path %></button>


<div>
  <table class="table table-striped table-bordered table-hover">
    <tr class="row">
      <th class="col-lg-2" scope="col">Title</th>
      <th class="col-lg-6" scope="col">Content</th>
      <th class="col-lg-2" scope="col">Author</th>
      <th class="col-lg-1" scope="col">Tags</th>
      <th class="col-lg-1" scope="col">View</th>
    </tr>
    <% @article.each do |article| %>
      <tr class="row">
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= article.author %></td>
        <td><%= article.tags %></td>
        <td><%= link_to 'Show', article_path(article) %></td>
      </tr>
    <% end %>
  </table>
</div>
